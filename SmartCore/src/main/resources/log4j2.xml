<?xml version = '1.0' encoding = 'UTF-8'?>
<Configuration status = 'warn' monitorInterval = "600">

    <Appenders>

        <RollingFile name = 'fileBase' fileName = 'target/logging/logging.log'
                     filePattern="${basePath}/$${date:yyyy-MM}/base-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>
                    %-10sn [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %-70C{4} %-40M(%-5L) - %msg%n
                </pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size = '10 MB' />
            </Policies>
            <DefaultRolloverStrategy max = "20" />
        </RollingFile>

        <RollingFile name = 'fileLogger' fileName = 'target/logging/logging.log'
                     filePattern="${basePath}/$${date:yyyy-MM}/class-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>
                    %-10sn [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %-70C{4} %-40M(%-5L) - %msg%n
                </pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy  />
                <SizeBasedTriggeringPolicy size = '25 MB' />
            </Policies>
            <DefaultRolloverStrategy max = "20"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <Logger name = 'com.smartCore' level = 'error' additivity = 'true'>
            <appender-ref ref = 'fileLogger' level = 'error' />
        </Logger>
        <Root level= 'debug' additivity = 'false'>
            <appender-ref ref = 'fileBase' />
        </Root>

    </Loggers>

</Configuration>